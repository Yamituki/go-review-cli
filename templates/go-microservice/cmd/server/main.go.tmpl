package main

import (
	"log"
	"os"
	"os/signal"
	"syscall"

	"{{.ModuleName}}/internal/server"
)

func main() {
	srv := server.NewServer()

	go func() {
		if err := srv.Start(":50051"); err != nil {
			log.Fatal(err)
		}
	}()

	log.Println("Server started on :50051")

	quit := make(chan os.Signal, 1)
	signal.Notify(quit, syscall.SIGINT, syscall.SIGTERM)
	<-quit

	srv.Stop()
}